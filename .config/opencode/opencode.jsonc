{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      // "headers": {
      //   "CONTEXT7_API_KEY": "YOUR_API_KEY"
      // },
      "enabled": true
    },
  },
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "edit": {
      "*.env": "deny",
      "*.env.*": "deny",
    },
    "bash": {
      "*": "ask",
      "rm *": "deny",
      "trash *": "deny",
      "grep *": "allow",
      "find *": "allow",
      "rg *": "allow",
      "fd *": "allow",
      "git status *": "allow",
      "git commit -e *": "allow",
    },
  }
}