# Custom aliases.
alias ls="lsd"
alias la="lsa"
alias vim="vim -u $XDG_CONFIG_HOME/vim/vimrc.vim"
alias vi="vim"
alias cat="bat"
alias less="less -S"
alias find="fd"
alias grep="rg"
alias fzfp="fzf --preview 'bat --color=always --style=numbers --line-range=:500 {}'"
alias python="python3"
alias py="python"
alias cht="cht.sh"
alias wget="curl -LO --retry 999 --retry-max-time 0 -C - "
alias make="gmake"